    <label for="">
      암호: 
    </label>
    <input type="password" id="userPwd" name="userPwd"/><br>
    <label for="">
      암호확인:
    </label>
    <input type="password" id="userPwdConfirm" name="userPwdConfirm"/><br>
    <label for="">
      이름: 
    </label>
    <input type="text" id="userName" name="userName"/><br>
    <label for="">
      전화번호: 
    </label>
    <input type="text" id="userPhone" name="userPhone"/><br>
    <input type="submit" value="회원가입" />
  </form>
  <script>
    $('#entryForm').submit(() => {
